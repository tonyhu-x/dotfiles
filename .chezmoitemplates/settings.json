{
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "editor.fontSize": 13,
    "editor.fontFamily": "'CaskaydiaCove Nerd Font Mono', Consolas, 'Courier New', monospace",
    "editor.smoothScrolling": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.accessibilitySupport": "off",
    "editor.stickyScroll.enabled": false,
    "explorer.autoReveal": false,
    "explorer.sortOrder": "type",
    "window.autoDetectColorScheme": true,
    "window.commandCenter": false,
    "window.title": "${rootName}${separator}${activeEditorShort}${separator}${profileName}",

    "workbench.colorTheme": "Gruvbox Material Dark",
    "workbench.preferredDarkColorTheme": "Gruvbox Material Dark",
    "workbench.preferredLightColorTheme": "Default Light+",

    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 3,
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.editor.navigationScope": "editorGroup",
    "diffEditor.ignoreTrimWhitespace": false,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.inputValidation": true,

    // VSCode Neovim
    "vscode-neovim.useWSL": true,
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/local/bin/nvim",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },

    // GitHub Copilot
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },

    "cSpell.enabled": false,

    // web dev
    "html.autoClosingTags": false,
    "javascript.autoClosingTags": false,
    "typescript.autoClosingTags": false,
    "eslint.experimental.useFlatConfig": true,
    "eslint.format.enable": true,
    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },

    // latex
    "[latex]": {
        "editor.formatOnPaste": false,
        "editor.wordBasedSuggestions": "off",
        "editor.suggestSelection": "recentlyUsedByPrefix",
        "editor.tabSize": 2,
        "editor.autoClosingBrackets": "beforeWhitespace"
    },
    "latex-workshop.view.pdf.viewer": "tab",

    "myst.preview.extensions": [
        "dollarmath",
        "colon_fence"
    ],
}
